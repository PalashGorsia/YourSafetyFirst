<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.sdei.yoursafetyfirst.ui.forgotpassword.ForgotViewModel" />
    </data>

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.forgotpassword.ForgotPasswordActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include
                android:id="@+id/top_bar"
                layout="@layout/appbar_back" />


            <LinearLayout
                android:id="@+id/forgot_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    style="@style/textview_sixteen_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="25dp"
                    android:padding="3dp"
                    android:text="@string/email_id" />

                <androidx.appcompat.widget.AppCompatEditText
                    style="@style/editText_fourteen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="13dp"
                    android:background="@drawable/edittext_curve"
                    android:hint="@string/enter_email_id"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:text="@={viewModel.emailObserver}" />


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_forgot_password"
                    style="@style/newBlueButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/send_email" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">


                <TextView
                    style="@style/textview_sixteen_normal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="25dp"
                    android:padding="3dp"
                    android:text="@string/enter_otp_sent_to_your_email" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="13dp"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_curve"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:text="@={viewModel.input1Observer}"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_curve"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:text="@={viewModel.input2Observer}"

                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_curve"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:text="@={viewModel.input3Observer}"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_curve"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:text="@={viewModel.input4Observer}"
                        android:textSize="15sp" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/input5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_curve"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:padding="15dp"
                        android:text="@={viewModel.input5Observer}"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/timer"
                    style="@style/textview_sixteen_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="3dp" />

                <TextView
                    android:id="@+id/resend"
                    style="@style/textview_sixteen_bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:text="@string/resend"
                    android:visibility="gone" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_otp"
                    style="@style/newBlueButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="8dp"
                    android:text="@string/continu" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/reset_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">


                <TextView
                    style="@style/textview_fourteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginTop="25dp"                    android:padding="3dp"
                    android:text="@string/enter_new_password" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconDrawable="@drawable/custom_eye_password"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/editText_fourteen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_curve"
                        android:hint="@string/enter_new_password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:text="@={viewModel.passwordObserver}" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    style="@style/textview_fourteen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="10dp"                    android:padding="3dp"
                    android:text="@string/confirm_password" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="13dp"
                    android:layout_marginTop="10dp"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:endIconDrawable="@drawable/custom_eye_password"
                    app:errorEnabled="false"
                    app:hintAnimationEnabled="false"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/editText_fourteen"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/edittext_curve"
                        android:hint="@string/enter_confirm_password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:text="@={viewModel.confirmPasswordObserver}" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reset_password"
                    style="@style/newBlueButton"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="7dp"
                    android:text="@string/reset_password" />


            </LinearLayout>

        </LinearLayout>


        <include
            android:id="@+id/progress"
            layout="@layout/progress_bar" />

    </FrameLayout>

</layout>